        <activity android:name=".CreateNewDishActivity" />
        <activity android:name=".ClickedProductActivity" />
        <activity android:name=".ProductsActivity" />
        <activity android:name=".TodayActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- <receiver android:process=":remote" android:name=".network.utils.AlarmReceiver"></receiver> -->
        <!-- <receiver android:name=".network.utils.AlarmReceiver"></receiver> -->
        <receiver android:name=".network.utils.AlarmReceiverOnBoot">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <action android:name="com.htc.intent.action.QUICKBOOT_POWERON" />
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>
