<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@+id/bar_background_protein">
        <shape>
            <corners android:radius="2dp" />
            <stroke android:color="#1E90FF"
                android:width="2dp"/>

            <gradient
                android:angle="270"
                android:centerColor="#E0FFFF"
                android:centerY="0.75"
                android:endColor="#555555"
                android:startColor="#666666" />
        </shape>
    </item>
    <item android:id="@+id/bar_value">
        <clip>
            <shape>
                <corners android:radius="2dp" />

                <gradient
                    android:angle="270"
                    android:centerColor="#AFEEEE"
                    android:centerY="0.75"
                    android:endColor="#6495ED"
                    android:startColor="#1E90FF" />
            </shape>
        </clip>
    </item>

</layer-list>