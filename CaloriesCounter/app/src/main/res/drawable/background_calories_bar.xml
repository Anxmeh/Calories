<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/bar_background">
        <shape>
            <corners android:radius="2dp" />
            <stroke
                android:width="2dp"
                android:color="#8B0000" />
            <gradient
                android:angle="270"
                android:centerColor="#E0FFFF"
                android:centerY="0.75"
                android:endColor="#555555"
                android:startColor="#666666" />
        </shape>
    </item>
    <item android:id="@+id/bar_value">
        <clip>
            <shape>
                <corners android:radius="2dp" />
                <gradient
                    android:angle="270"
                    android:centerColor="#fa8072"
                    android:centerY="0.75"
                    android:endColor="#B22222"
                    android:startColor="#8B0000" />
            </shape>
        </clip>
    </item>
</layer-list>